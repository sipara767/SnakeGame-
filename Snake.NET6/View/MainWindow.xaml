<Window x:Class="Snake.NET6.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:localVM="clr-namespace:Snake.NET6.ViewModel"
        xmlns:local="clr-namespace:Snake.NET6.View"
        
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <localVM:MainViewModel/>
    </Window.DataContext>
 
    <Grid >
        <Rectangle x:Name="SnakeObject" HorizontalAlignment="Left" Stroke="Black" VerticalAlignment="Top" Width="70" Fill="Black" Height="72" Margin="{Binding Snake.Coordinates}"  />

    </Grid>
<Window.InputBindings>
    <KeyBinding Key="Up" Command="{Binding IMoveUp}"/>
    <KeyBinding Key="Right" Command="{Binding IMoveRight}"/>
    <KeyBinding Key="Left" Command="{Binding IMoveLeft}"/>
    <KeyBinding Key="Down" Command="{Binding IMoveDown}"/>
</Window.InputBindings>
</Window>
